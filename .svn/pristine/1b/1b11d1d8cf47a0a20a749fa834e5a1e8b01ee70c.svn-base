<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>Hello APP</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css" />
    <link rel="stylesheet" type="text/css" href="../css/aui.css" />
    <link rel="stylesheet" type="text/css" href="../css/dropload.css"/>
    <style type="text/css">
    html,body{
        height: 100%;
        background-color: #f9f9f9;
        position: fixed;
    }
    .aui-list-item-inner{
      color: #777777
    }
    .aui-list-item>img{
      width:12%;
      height:12%;
      margin-right: 5px
    }
    </style>
</head>
<body>
    <div class="aui-content aui-margin-b-15" id="scellContent"style="overflow:auto;height:99%" >
        <ul class="aui-list aui-list-in" style="overflow:auto;" >
            <li class="aui-list-item" @click="openDiverInfo(driver.id)" v-for="driver in diverList">
                <img src="../image/driver.png"/>
                <div class="aui-list-item-inner aui-list-item-arrow">
                    <div style="color: #777777;font-size:15px">{{driver.devName}}</div>
                    <div style="color: #999999;font-size:13px">{{driver.ip}}</div>
                </div>
            </li>

        </ul>
    </div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/jquery.min.js"></script>
<script type="text/javascript" src="../script/dropload.min.js"></script>
<script type="text/javascript" src="../script/vue.js"></script>
<script type="text/javascript">
var load;
apiready = function () {

}
var indexVue=new Vue({
  el:"#scellContent",
  data:function(){
    return {
        diverList:[]
    }
  },
  methods:{
    openDiverInfo:openDiverInfo
  }
})
var page=0;
var pageSize=10;
indexVue.diverList=[]
/**
* 初始化分页信息
*/  initRefresh();
  function initRefresh(){
    load=$('#scellContent').dropload({
       scrollArea: $(".aui-list"),
       autoLoad:true,
       domDown: {
           domClass: "dropload-down",
           domRefresh: '<div class="dropload-refresh">上拉加载更多</div>',
           domLoad: '<div class="dropload-load"><span class="loading"></span>正在加载...</div>',
           domNoData: '<div class="dropload-noData">暂无更多数据</div>'
       },
      loadDownFn:function(me){
              $.ajax({
                  type: 'GET',
                  url: 'http://192.168.2.104:8082/getDeviceList',
                  data:{
                    page:page,
                    pageSize:pageSize
                  },
                  async:false,
                  dataType: 'json',
                  success: function(data){
                      if(data.result.data.length>0){
                        page=page+1;
                        me.noData(false);
                        me.unlock('down')
                      }else{
                        me.noData(true);
                        me.lock('down')
                      }
                        indexVue.diverList=indexVue.diverList.concat(data.result.data)
                        me.resetload();
                  },
                  error: function(xhr, type){
                      me.resetload();
                      me.noData(true);
                      me.lock('down')
                  }
              });
          }
    });
  }

  function openDiverInfo(driverId){
      api.openWin({
          name: 'diverInfo',
          url: './diverInfo.html',
          pageParam: {
              driverId: driverId
          }
      });
  }
</script>
</html>
